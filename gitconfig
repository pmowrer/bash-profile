[alias]
    st = status
    co = checkout
    ci = commit
    chp = cherry-pick
    # Reset current branch to its upstream HEAD
    ru = "!git reset --hard upstream/\"$(git rev-parse --abbrev-ref HEAD)\""
    # From: http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/ 
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate

